<div class="center">
    <div class="textCenter"><h5>Professional Information</h5></div>
    <div class="form-group">
        <label for="team">Team</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Team" ng-model="profile.team">
    </div>
    <div class="form-group">
        <label for="asso">Associations</label>
        <input type="text" class="form-control" id="asso" placeholder="Enter associations.Eg NFL,NBA"
               ng-model="profile.asso">
    </div>

    <div class="form-group">
        <label for="sports">Sports (You can select multiple options)</label>
        <select class="custom-select" id="sports" ng-model="profile.sports" multiple>
            <option ng-repeat="item in sportsList">{{item}}</option>
        </select>
    </div>
    <div class="form-group">
        <label for="interests">Interests</label>
        <input type="text" class="form-control" id="interests" placeholder="Interests" ng-model="profile.interests">
    </div>

    <div class="float-right">
        <a ui-sref="profileForm.social">
            <button type="button" class="btn btn-primary">Next Step</button>
        </a>
    </div>
</div>