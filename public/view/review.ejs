<div class="review">
    <div class="textCenter"><h5>Review Your Information</h5></div>
    <div class="form-group">
        <div class="jumbotron">
            <h5 class="float-right"><a ui-sref="profileForm.basic"> Edit </a></h5>
            <h3 class="display-6">Basic Information</h3>
            <br>
            <p class="lead">Name * : {{profile.name }}</p>
            <p class="lead">Date Of Birth * : {{profile.dob | date: "yyyy-MM-dd"}}</p>
            <p class="lead">Gender : {{profile.gender}}</p>
            <p class="lead">Marital Status : {{profile.maritalStatus}}</p>
            <p class="lead">Location : {{profile.location}}</p>
            <p class="lead">Nationality : {{profile.nationality}}</p>

        </div>
        <div class="jumbotron">
            <h5 class="float-right"><a ui-sref="profileForm.about"> Edit </a></h5>
            <h3 class="display-6">Professional Information</h3>
            <br>
            <p class="lead">Team : {{profile.team}}</p>
            <p class="lead">Associations : {{profile.associations}}</p>
            <div class="form-group">
                <select class="custom-select" id="sports" ng-model="profile.sports" multiple disabled>
                    <option ng-repeat="item in sportsList">{{item}}</option>
                </select>
            </div>
            <p class="lead">Interests : {{profile.interests}}</p>
        </div>
        <div class="jumbotron">
            <h5 class="float-right"><a ui-sref="profileForm.social"> Edit </a></h5>
            <h3 class="display-6">Social-Media Information</h3>
            <br>
            <p class="lead">Facebook : {{profile.fb}}</p>
            <p class="lead">Twitter : {{profile.twitter}}</p>
            <p class="lead">Instagram : {{profile.insta}}</p>
            <p class="lead">Twitch : {{profile.twitch}}</p>
            <p class="lead">Snap Chat : {{profile.snap}}</p>
            <p class="lead">Do you have Pets : {{profile.pets ? 'Yes' : 'No'}}</p>
            <p class="lead">Drink Alcohol: {{profile.alcohol ? 'Yes' : 'No'}}</p>

        </div>
    </div>
    <button type="button" class="btn btn-primary float-right" ng-click="submitProfile()">Submit</button>
</div>


